{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "types": [
      "react-native",
      "node",
      "nativewind/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app": [
        "./app"
      ],
      "@/components": [
        "./components"
      ],
      "@/context": [
        "./context"
      ],
      "@/assets": [
        "./assets"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "app/firebaseconfig.js"
  ],
  "exclude": [
    "node_modules/",
    "*__*.tsx",
  ]
}