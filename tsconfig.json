{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "Node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app": [
        "./app"
      ],
      "@/components": [
        "./components"
      ],
      "@/context": [
        "./context"
      ],
      "@/assets": [
        "./assets"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
