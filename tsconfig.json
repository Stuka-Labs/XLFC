{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "types": [
      "react-native",
      "node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components": [
        "./components"
      ],
      "@/context": [
        "./context"
      ],
      "@/assets": [
        "./assets"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
